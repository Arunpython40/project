<testApp>:
    Screen:
        Image:
            source: "images/photo_2024-01-20_11-44-36.jpg"
            size_hint: None, None
            width:dp(445)
            height:dp(700)
            pos_hint: {'center_x':0.5}


        MDLabel:
            text: "Welcome"
            font_name: "asset/Anime.otf"
            font_size:"48dp"
            halign:"center"
            color:"#FFFFFF"
            pos_hint: {'center_y':0.8}
        MDTextField:
            id: email
            hint_text: "Email Id"
            icon_right:'account'
            font_size: dp(20)
            size_hint_x: 0.85
            pos_hint: {'center_x':0.5,'center_y':0.65}
            on_text: self.text = self.text.replace("","")
            write_tab: False
        MDTextField:
            id: pwd
            password: True
            icon_right:'eye-off'
            hint_text: "Password"
            font_size: dp(20)
            size_hint_x: 0.85
            pos_hint: {'center_x':0.5,'center_y':0.55}
            on_text: self.text = self.text.replace("","")
            write_tab: False
        BoxLayout:
            size_hint:.85, None
            height: dp(30)
            pos_hint: {'center_x': 0.5, 'center_y':0.45}
            spacing: "5dp"

            MDCheckbox:
                id:cb
                size_hint: None, None
                width: dp(30)
                height: dp(30)
                pos_hint: {'center_x':0.5,'center_y':0.75}
                on_press:
                    pwd.password = False if pwd.password == True else True
                    pwd.icon_right = 'eye' if pwd.icon_right == 'eye-off' else "eye-off"
            MDLabel:
                text: "[ref=Show Password]Show Password[/ref]"
                markup: True
                pos_hint: {'center_x':0.7,'center_y':0.75}
                on_ref_press:
                    cb.active = False if cb.active == True else True
        BoxLayout:
            size_hint:.85, None
            height: dp(30)
            pos_hint: {'center_x': 0.5, 'center_y':0.3}
            spacing: "5dp"
            MDFlatButton:
                text: "Login In "
                font_size:dp(20)
                size_hint_x: 1
                md_bg_color:"#FFFFFF"
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                font_name:"asset/MADE Tommy Soft Black PERSONAL USE.otf"
                on_release: app.verify_data(email.text,pwd.text)


            MDFlatButton:
                text: "Sign Up "
                font_size:dp(20)
                size_hint_x: 1
                md_bg_color:"#FFFFFF"
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                font_name:"asset/MADE Tommy Soft Black PERSONAL USE.otf"

<HomeScreen>
    MDFlatButton:
        text: "Log Out"
        font_size:dp(20)
        size_hint_x: 1
        md_bg_color:"#FFFFFF"
        theme_text_color: "Custom"
        text_color: 0,0,0,1
        font_name:"asset/MADE Tommy Soft Black PERSONAL USE.otf"
        on_press: root.login_pressed()
